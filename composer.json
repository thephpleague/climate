    "require": {
        "php": ">=5.4.0",
        "seld/cli-prompt": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6",
        "mockery/mockery": "~0.9",
        "mikey179/vfsStream": "~1.4"
